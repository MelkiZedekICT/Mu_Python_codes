import numpy as np

# Create a 4x4 matrix with values from 1 to 16
matrix = np.arange(1, 17).reshape(4, 4)

# Extract the first two rows
first_two_rows = matrix[:2, :]

print("Matrix:\n", matrix)
print("\nFirst two rows:\n", first_two_rows)


import numpy as np

# Create a 5x5 matrix with values from 1 to 25
matrix = np.arange(1, 26).reshape(5, 5)

# Extract the middle 3x3 submatrix
middle_submatrix = matrix[1:4, 1:4]

print("Matrix:\n", matrix)
print("\nMiddle 3x3 submatrix:\n", middle_submatrix)


import numpy as np

# Create a 5x5 matrix with values from 1 to 25
matrix = np.arange(1, 26).reshape(5, 5)

# Extract all even elements
even_elements = matrix[matrix % 2 == 0]

print("Matrix:\n", matrix)
print("\nEven elements:\n", even_elements)


